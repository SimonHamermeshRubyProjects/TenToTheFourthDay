


<div class="row">
  <div class="col-md-4 col-md-offset-4">
    <div class="well text-center">
      <%= form_for @user, url: pages_path, html: { method: :post } do |f| %>
        <div class="form-group">
          <%= f.label :first_name %>
          <%= f.text_field :first_name, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :last_name %>
          <%= f.text_field :last_name, class: 'form-control' %>
        </div>
         <div class="form-group">
          <%= f.label :birthday %></br>
          <%= f.date_select :birthday, :start_year=>1900, :end_year=>2050, class: 'form-control' %>
        </div>
      
        
    
    <%= f.submit 'Submit', class: 'btn btn-default btn-primary btn-block' %>
    <% end %>
      
  
      
    </div>
  </div>
</div>


